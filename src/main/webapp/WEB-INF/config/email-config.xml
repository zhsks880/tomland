<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	

	<!-- 이메일 인증 관련 빈 등록 -->
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		
		<property name="host" value="smtp.gmail.com" />	<!-- smtp.gmail.com / port : 587 --> 
		<property name="port" value="587" />	<!-- smtp.naver.com / port : 465 -->
		<property name="username" value="${email.account}" />
		<property name="password" value="${email.password}" />
		
		<!-- 보안설정으로 꼭 붙혀 넣어서 써줘야함 -->
		<property name="javaMailProperties">
         <props>            
         	<!-- 구글용 : mail.smtp.starttls.enable -->
         	<!-- 네이버용 : mail.smtp.ssl.enable  -->
            <prop key="mail.smtp.starttls.enable">true</prop>
            <prop key="mail.smtp.auth">true </prop>
            <prop key="mail.transport.protocol">smtp</prop>
            <prop key="mail.debug">true</prop>
            <prop key="mail.smtps.ssl.trust">*</prop>
            <prop key="mail.smtp.ssl.protocols">TLSv1.2</prop>
         </props>
      </property>
		
	</bean>	

</beans>